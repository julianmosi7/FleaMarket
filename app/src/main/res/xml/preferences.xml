<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:defaultValue="MoshamJul"
        android:key="username"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Einstellung des Benutzernamens"
        android:title="Benutzername" />

    <EditTextPreference
        android:defaultValue="17333"
        android:key="password"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Einstellung des Passworts"
        android:title="Passwort" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="ifclosed"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Wollen sie, auch wenn die App geschlossen ist, eine Benachrichtigung erhalten?"
        android:title="Benachrichtigung, wenn geschlossen?" />

</PreferenceScreen>